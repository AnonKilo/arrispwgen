{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ESNext",
    "module": "ESNext",
    "alwaysStrict": true,
    "strict": true,
    "types": ["node"],
    "declaration": true,
    "plugins": [
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true
      }
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
